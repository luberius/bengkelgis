<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#D6D5D5"
        android:padding="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="3dp">
            <LinearLayout
                android:id="@+id/lineimage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:orientation="horizontal"
                android:padding="3dp"
                >

                <com.android.volley.toolbox.NetworkImageView
                    android:id="@+id/VolleyImageView"
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:src="@mipmap/ic_launcher"
                    android:layout_marginBottom="0dp"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/VolleyImageView"
                        android:layout_toEndOf="@+id/VolleyImageView"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:text="Service Name"
                        android:id="@+id/ImageNameTextView"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"/>
                    <TextView
                        android:id="@+id/telp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Telephon"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        android:textColor="#838383"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        ></TextView>
                    <TextView
                        android:id="@+id/email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        android:textColor="#838383"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        ></TextView>
                    <Button
                        android:id="@+id/btndetail"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:text="Detail"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:textSize="10sp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:drawableLeft="@drawable/ic_file"
                        android:background="#E91E63"
                        />
                    <TextView
                        android:id="@+id/id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="0dp"
                        android:text="Id"></TextView>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.cardview.widget.CardView>